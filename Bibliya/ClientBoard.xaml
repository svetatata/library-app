<Window x:Class="Bibliya.ClientBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliya"
        mc:Ignorable="d"
        Title="ClientBoard" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <Button Click="Button_Click" Height="40" FontSize="18" Margin="0, 0 ,0,10">Каталог книг</Button>
            <Button Click="Button3_Click" Height="40" FontSize="18" Margin="0, 0 ,0,10">Продлить книгу</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100">
            <Button Height="40" Background="{x:Null}" Margin="10" Click="Button_Click_1">← Выход</Button>
        </StackPanel>
    </Grid>
</Window>
