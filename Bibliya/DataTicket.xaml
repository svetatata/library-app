<Window x:Class="Bibliya.DataTicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliya"
        mc:Ignorable="d"
        Title="DataTicket" Height="450" Width="350
        " Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="id" Grid.Column="0" Grid.Row="0" Margin="5" IsEnabled="False"/>
            <TextBox x:Name="id" Grid.Column="1" Margin="5"/>

            <Label Content="Фамилия" Grid.Column="0" Grid.Row="1" Margin="5"/>
            <TextBox x:Name="lastnameBox" Grid.Column="1" Grid.Row="1" Margin="5"/>

            <Label Content="Имя" Grid.Column="0" Grid.Row="2" Margin="5"/>
            <TextBox x:Name="firstnameBox" Grid.Column="1" Grid.Row="2" Margin="5"/>

            <Label Content="Отчество" Grid.Column="0" Grid.Row="3" Margin="5"/>
            <TextBox x:Name="patronymicBox" Grid.Column="1" Grid.Row="3" Margin="5"/>

            <Label Content="Паспорт" Grid.Column="0" Grid.Row="4" Margin="5"/>
            <TextBox x:Name="passportBox" Grid.Column="1" Grid.Row="4" Margin="5"/>
        </Grid>
        <Button Grid.Row="1" Height="30" Margin="10" Click="Button_Click">Сохранить</Button>
    </Grid>
</Window>
