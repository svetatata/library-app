<Window x:Class="Bibliya.AdminBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliya"
        mc:Ignorable="d"
        Title="AdminBoard" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Button Click="Button_Click" Grid.Row="0" Height="40" FontSize="18" Margin="0, 0 ,10,10">Книги</Button>
            <Button Click="Button2_Click" Grid.Row="1" Height="40" FontSize="18" Margin="0, 0 ,10,10">Читательские билеты</Button>
            <Button Click="Button3_Click" Grid.Row="2" Height="40" FontSize="18" Margin="0, 0 ,10,10">Издательства</Button>
            <Button Height="40" FontSize="18" Grid.Row="3"  Margin="0, 0 ,10,0" Click="Button_Click_2" >Авторы</Button>
            <Button Height="90" FontSize="18" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Background="black" Foreground="White" FontWeight="Bold" Margin="0,0,0,10" Click="Button_Click_3">Выдать</Button>
            <Button Height="90" FontSize="18" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Background="black" Foreground="White" FontWeight="Bold" Click="Button_Click_4">Принять</Button>
        </Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100">
            <Button Height="40" Background="{x:Null}" Margin="10" Click="Button_Click_1">← Выход</Button>
        </StackPanel>


    </Grid>
</Window>
